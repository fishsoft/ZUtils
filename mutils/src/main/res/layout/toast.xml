<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dip_20"
    android:layout_marginRight="@dimen/dip_20"
    android:alpha="0.7"
    android:background="@drawable/shape_toast_bg" >

    <TextView
        android:id="@+id/toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxLines="2"
        android:paddingBottom="@dimen/dip_20"
        android:paddingLeft="@dimen/dip_40"
        android:paddingRight="@dimen/dip_40"
        android:paddingTop="@dimen/dip_20"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_normal" />

</RelativeLayout>